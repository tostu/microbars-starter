{{#partial "body" }}
    {{#if loggedIn}}
        <h1>username: <span>{{username}}</span></h1>
    {{else}}
        <h1 class="bg-black">You are not logged in</h1>
    {{/if}}
    {{#if loggedIn}}
        <form action="logout" method="POST">
            <input type="submit" value="Logout"/>
        </form>
    {{else}}
        <p><a href="/login/auth">Login</a></p>
    {{/if}}
{{/partial}}

{{> views/layouts/default}}
